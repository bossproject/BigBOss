@model IEnumerable<BigBoss.Models.ProjectModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    SLIDER
</div>

<div class="row">
    @foreach(BigBoss.Models.ProjectModel p in Model.ToList()) {
        <a href="@Url.Action("ProjectEdit", "AdminPanel", new {id = p.Id})" class="col-md-4" style="padding:unset; max-width: 370px;  margin-left: 15px;">
            <div style="position: relative; font-size: 12px; height: 350px; border: 1px solid grey; border-radius: 5px;">
                <div style="position: relative; background-color: #999999; height: 150px;"></div>
                <div class="bottom-text">@p.nameProject &emsp; Donations: @p.numberOfDonations</div>
                <div class="progress bottom-progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:70%">
                        70%
                    </div>
                </div>
            </div>
        </a>
    }
</div>