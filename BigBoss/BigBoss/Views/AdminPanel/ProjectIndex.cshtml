@model IEnumerable<BigBoss.Models.ProjectModel>

@{
    ViewBag.Title = "ProjectIndex";
}

<script ></script>

<h2>ProjectIndex</h2>
<p>@TempData["success_msg_proj"]</p>
<p>
    @Html.ActionLink("Create New", "ProjectCreate")
</p>

@Scripts.Render("~/bundles/dataTables")

<table class="table table-striped table-bordered" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.additionalInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tagsProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moneyWithCommission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moneyRaised)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfDonations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryMod.nameCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nameProject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descProject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.additionalInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tagsProject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.money)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moneyWithCommission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moneyRaised)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfDonations)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryMod.nameCategory)
                </td>
                <td>
                    @Html.ActionLink("Edit", "ProjectEdit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "ProjectDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "ProjectDelete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="~/content/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
